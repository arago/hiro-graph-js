{
    "name": "root",
    "private": true,
    "license": "MIT",
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/babel-jest",
            "**/hiro-*",
            "**/@arago/OGIT",
            "**/websocket",
            "**/isomorphic-fetch",
            "**/isomorphic-ws"
        ]
    },
    "devDependencies": {
        "@hiro-ui/eslint-config": "1.6.1-alpha.0",
        "@hiro-ui/prettier-config": "1.1.2",
        "husky": "^5.1.3",
        "jest-junit": "^12.0.0",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.4"
    },
    "scripts": {
        "release": "lerna publish --dist-tag dev --contents pkg",
        "build": "lerna run build",
        "test": "yarn install && yarn lint && lerna run build && lerna run test",
        "test:ci": "yarn install --frozen-lockfile && yarn lint && lerna run build && lerna run test:ci",
        "format": "prettier 'packages/*/*.{js,ts,tsx}' 'packages/*/!(node_modules|lib|pkg)/**/*.ts' --write",
        "lint-prettier": "prettier 'packages/*/*.{js,ts,tsx}' 'packages/*/!(node_modules|lib|pkg)/**/*.ts' --list-different",
        "lint-eslint": "eslint packages/**/src/**/*",
        "lint": "yarn lint-prettier && yarn lint-eslint",
        "precommit": "yarn format"
    },
    "eslintConfig": {
        "extends": "@hiro-ui",
        "rules": {
            "no-sequences": "off",
            "import/no-extraneous-dependencies": "off"
        }
    },
    "prettier": "@hiro-ui/prettier-config",
    "lint-staged": {
        "src/**/*.{js,ts,tsx}": [
            "eslint --max-warnings 0"
        ]
    }
}
