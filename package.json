{
    "name": "root",
    "private": true,
    "license": "MIT",
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/babel-jest",
            "**/hiro-*",
            "**/@arago/OGIT"
        ]
    },
    "devDependencies": {
        "@hiro-ui/eslint-config": "1.4.1",
        "@hiro-ui/prettier-config": "1.1.1",
        "husky": "^4.2.1",
        "lerna": "^3.20.2",
        "lint-staged": "^10.0.7"
    },
    "scripts": {
        "test": "yarn install --frozen-lockfile && yarn lint && lerna run build && lerna run test",
        "publish": "lerna publish",
        "format": "prettier 'packages/*/*.{js,ts,tsx}' 'packages/*/!(node_modules|lib)/**/*.js' --write",
        "lint-prettier": "prettier 'packages/*/*.{js,ts,tsx}' 'packages/*/!(node_modules|lib)/**/*.js' --list-different",
        "lint-eslint": "eslint packages/",
        "lint": "yarn lint-prettier && yarn lint-eslint",
        "precommit": "yarn format"
    },
    "eslintConfig": {
        "extends": "@hiro-ui",
        "rules": {
            "no-sequences": "off"
        }
    },
    "prettier": "@hiro-ui/prettier-config",
    "lint-staged": {
        "src/**/*.{js,ts,tsx}": [
            "eslint --max-warnings 0"
        ]
    }
}
