{
    "name": "@hiro-graph/client",
    "repository": "arago/hiro-graph-js",
    "version": "7.4.0-alpha.13",
    "description": "Javascript client for HIRO Graph REST API. Works in both node and browser.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "sideEffects": false,
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "pika build",
        "prepublish": "yarn test && yarn build",
        "test": "madge --circular src/index.ts && jest --silent",
        "test:ci": "jest --silent --ci --reporters=default --reporters=jest-junit"
    },
    "license": "MIT",
    "dependencies": {
        "@babel/runtime": "^7.11.2",
        "isomorphic-fetch": "^2.2.1",
        "isomorphic-ws": "^4.0.1",
        "lodash": "^4.17.20",
        "nanoid": "^3.1.12",
        "ws": "^7.3.1"
    },
    "devDependencies": {
        "@pika/pack": "^0.5.0",
        "@pika/plugin-build-deno": "^0.9.2",
        "@pika/plugin-build-node": "^0.9.2",
        "@pika/plugin-build-types": "^0.9.2",
        "@pika/plugin-build-web": "^0.9.2",
        "@pika/plugin-bundle-web": "^0.9.2",
        "@pika/plugin-ts-standard-pkg": "^0.9.2",
        "@types/isomorphic-fetch": "^0.0.35",
        "@types/jest": "^26.0.10",
        "@types/lodash": "^4.14.160",
        "@types/node-fetch": "2.5.7",
        "@types/ws": "^7.2.6",
        "jest": "^26.4.1",
        "madge": "^3.9.2",
        "rxjs": "^6.6.2",
        "ts-jest": "^26.2.0",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "peerDependencies": {
        "rxjs": "~6.6.0"
    },
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-ts-standard-pkg",
                {
                    "exclude": [
                        "__tests__/**/*",
                        "__mocks__/**/*"
                    ]
                }
            ],
            [
                "@pika/plugin-build-deno"
            ],
            [
                "@pika/plugin-build-web"
            ],
            [
                "@pika/plugin-build-node"
            ],
            [
                "@pika/plugin-bundle-web",
                {
                    "browser": true,
                    "namedExports": {
                        "node_modules/isomorphic-ws/browser.js": [
                            "default"
                        ]
                    }
                }
            ]
        ]
    },
    "jest-junit": {
        "suiteName": "@hiro-graph/client",
        "outputDirectory": "../../reports",
        "outputName": "hiro-graph-client.xml"
    },
    "publishConfig": {
        "access": "public"
    }
}
