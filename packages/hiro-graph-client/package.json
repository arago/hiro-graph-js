{
    "name": "@hiro-graph/client",
    "repository": "arago/hiro-graph-js",
    "version": "7.3.5",
    "description": "Javascript client for HIRO Graph REST API. Works in both node and browser.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "sideEffects": false,
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "pika build",
        "prepublish": "yarn test && yarn build",
        "test": "madge --circular src/index.ts && jest --silent",
        "test:ci": "jest --silent --ci --reporters=default --reporters=jest-junit"
    },
    "license": "MIT",
    "dependencies": {
        "@babel/runtime": "^7.9.2",
        "isomorphic-fetch": "^2.2.1",
        "rxjs": "^6.5.4",
        "uid": "^1.0.0",
        "websocket": "^1.0.25"
    },
    "devDependencies": {
        "@pika/pack": "^0.5.0",
        "@pika/plugin-build-deno": "^0.9.2",
        "@pika/plugin-build-node": "^0.9.2",
        "@pika/plugin-build-types": "^0.9.2",
        "@pika/plugin-build-web": "^0.9.2",
        "@pika/plugin-bundle-web": "^0.9.2",
        "@pika/plugin-ts-standard-pkg": "^0.9.2",
        "@types/isomorphic-fetch": "^0.0.35",
        "@types/jest": "^25.2.1",
        "@types/node-fetch": "2.5.4",
        "@types/websocket": "1.0.0",
        "jest": "^25.1.0",
        "madge": "^3.8.0",
        "ts-jest": "^25.3.1",
        "ts-node": "^8.8.2",
        "typescript": "^3.8.3"
    },
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-ts-standard-pkg",
                {
                    "exclude": [
                        "__tests__/**/*",
                        "__mocks__/**/*"
                    ]
                }
            ],
            [
                "@pika/plugin-build-deno"
            ],
            [
                "@pika/plugin-build-web"
            ],
            [
                "@pika/plugin-build-node"
            ],
            [
                "@pika/plugin-bundle-web",
                {
                    "browser": true,
                    "namedExports": {
                        "websocket/lib/browser.js": [
                            "w3cwebsocket"
                        ]
                    }
                }
            ]
        ]
    },
    "jest-junit": {
        "suiteName": "@hiro-graph/client",
        "outputDirectory": "../../reports",
        "outputName": "hiro-graph-client.xml"
    },
    "publishConfig": {
        "access": "public"
    }
}
