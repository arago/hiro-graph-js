{
    "name": "hiro-graph-gremlin",
    "version": "1.0.1",
    "description": "Gremlin Query builder for the HIRO Graph API",
    "main": "lib/gremlin.js",
    "directories": {
        "lib": "lib"
    },
    "scripts": {
        "build":
            "rm -rf lib/* && BABEL_ENV=production babel src --out-dir lib --source-maps",
        "prepublish": "yarn build",
        "test": "jest --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arago/hiro-graph-js.git"
    },
    "keywords": ["HIRO Graph", "HIRO", "gremlin"],
    "author": "Chris Walker <cwalker@arago.de>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/arago/hiro-graph-js/issues"
    },
    "homepage": "https://github.com/arago/hiro-graph-js#readme",
    "devDependencies": {
        "babel-cli": "^6.6.5",
        "babel-jest": "^23.4.2",
        "babel-preset-hiro": "^0.4.0",
        "jest": "^23.5.0"
    },
    "babel": {
        "presets": [
            [
                "hiro",
                {
                    "library": true
                }
            ]
        ]
    },
    "jest": {
        "testPathIgnorePatterns": ["<rootDir>[/\\\\](lib|node_modules)[/\\\\]"],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
        }
    }
}
